<h1>Listing packages</h1>

<table>
  <thead>
    <tr>
      <th>Tracking</th>
      <th>Customer</th>
      <th>Weight</th>
      <th>Value</th>
      <th>Sender name</th>
      <th>Sender address</th>
      <th>Sender city</th>
      <th>Sender state</th>
      <th>Sender country</th>
      <th>Sender phone</th>
      <th>Sender email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.tracking %></td>
        <td><%= package.customer_id %></td>
        <td><%= package.weight %></td>
        <td><%= package.value %></td>
        <td><%= package.sender_name %></td>
        <td><%= package.sender_address %></td>
        <td><%= package.sender_city %></td>
        <td><%= package.sender_state %></td>
        <td><%= package.sender_country %></td>
        <td><%= package.sender_phone %></td>
        <td><%= package.sender_email %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
